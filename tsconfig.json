{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2020", "DOM"],
    "baseUrl": "./",
    "outDir": "./dist/js",
    "rootDir": "./src/",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/cache/tsc.json",
    "skipLibCheck": true
  }
}
